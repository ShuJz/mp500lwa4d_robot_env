          <kd>100.0</kd>
          <fdir1>0 0 1</fdir1>
          <material value="Gazebo/Grey"/>
      </gazebo>
      
      <!-- Castor -->
      <gazebo reference="hanger">
          <gravity>true</gravity>
          <mu1>0.1</mu1>
          <mu2>0.1</mu2>
          <kp>1000000.0</kp>
          <kd>100.0</kd>
          <fdir1>0 0 1</fdir1>
          <material value="Gazebo/Grey"/>
      </gazebo>

